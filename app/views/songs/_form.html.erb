<%= form_for(@song) do |f| %>

    <% if @song.errors.any? %>
        <div id="error_explanation">
        <h2>There were some errors:</h2>

        <ul>
        <% @song.errors.full_messages.each do |message| %>
                <li><%= message %></li>
        <% end %>
        </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.label :title %>
        <%= f.text_area :title %>
    </div>
    <div class="field">
        <%= f.label :released %>
        <%= f.text_area :released %>
    </div>
    <div class="field">
        <%= f.label :release_year %>
        <%= f.text_area :release_year %>
    </div>
    <div class="field">
        <%= f.label :artist_name %>
        <%= f.text_area :artist_name %>
    </div>
    <div class="field">
        <%= f.label :genre %>
        <%= f.text_area :genre %>
    </div>
    <div class="actions">
        <%= f.submit %>
    </div>
    <%end%>